@model ShoeStore.Models.UserReg_Result

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="background-color: #F2F2F2; padding: 50px; margin: auto">
        <div class="form-horizontal" style="background-color: white; padding: 30px; border-radius: 1rem">
            <h4>Thêm tài khoản</h4>
            @Html.ValidationMessage("CreateFailed", new { @style = "font-size: 12px; color:red;" })
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            <hr />
            <div class="row">
                <div class="col">
                    <label for="" class="form-label">Tài Khoản</label>
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control p-2 mw-100", @maxlength = "50" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    <label for="" class="form-label">Mật khẩu</label>
                    @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control p-2 mw-100", @maxlength = "50" } })
                    @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-2 mb-3">
                <div class="col">
                    <label for="" class="form-label">Tên khách hàng</label>
                    @Html.EditorFor(model => model.tenkh, new { htmlAttributes = new { @class = "form-control p-2 mw-100", @maxlength = "50" } })
                    @Html.ValidationMessageFor(model => model.tenkh, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    <label for="" class="form-label">Số điện thoại</label>
                    @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control p-2 mw-100" } })
                    @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-2 mb-3">
                <div class="col">
                    <label for="" class="form-label">Email</label>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control p-2 mw-100", @maxlength = "50" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    <label for="" class="form-label">Địa chỉ</label>
                    @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control p-2 mw-100" } })
                    @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="d-flex justify-content-end text-lg-end">
                @Html.ActionLink("Hủy", "CustomerList", "Home", new { @class = "btn btn-outline-success", @style = "border-radius: 1.5rem;  width: 100px;" })
                <input class="btn btn-success" style="border-radius: 1.5rem; width: 100px; margin-left: 15px;" type="submit" value="Thêm" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

