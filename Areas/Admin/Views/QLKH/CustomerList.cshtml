@model IEnumerable<ShoeStore.Models.UserReg_Result>
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<a href="@Url.RouteUrl("ThemKH")" class = "btn btn-success p-2" >Tạo tài khoản</a>

<div class="form-horizontal" style="background-color: white; padding: 30px; border-radius: 1rem; margin-top: 20px;">
    <table class="table table-hover">
        <tr>
            <th>
                <span>ID</span>
            </th>
            <th>
                <span>Họ tên</span>
            </th>
            <th>
                <span>Email</span>
            </th>
            <th>
                <span>Số điện thoại</span>
            </th>
            <th>
                <span>Địa chỉ</span>
            </th>
            <th>
                <span>Tài khoản</span>
            </th>
            <th>
                <span>Mật khẩu</span>
            </th>
        </tr>

        @foreach (var item in ViewBag.CustomerList)
        {
            <tr>
                <td>
                    @item.id
                </td>
                <td>
                    @item.tenkh
                </td>
                <td>
                    @item.email
                </td>
                <td>
                    @item.sdt
                </td>
                <td>
                    @item.diachi
                </td>
                <td>
                    @item.username
                </td>
                <td>
                    @item.pass
                </td>
            </tr>
        }

    </table>
</div>
