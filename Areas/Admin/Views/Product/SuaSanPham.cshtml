
@{
    ViewBag.Title = "SuaSanPham";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container" style="background-color: #F2F2F2; padding: 50px; margin: auto">
        <div class="form-horizontal w-50 mx-auto" style="background-color: white; padding: 30px; border-radius: 1rem">
            <h4>Sửa</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <hr />
            <div class="row">
                <div class="col">
                    <label for="" class="form-label my-3">ProductName</label>
                    <input type="type" name="ProductName" class="form-control" value="@ViewBag.sua.ProductName" />
                </div>
                <div class="col">
                    <label for="" class="form-label my-3">ProductPrice</label>
                    <input type="type" name="ProductPrice" class="form-control" value="@ViewBag.sua.ProductPrice" />
                </div>
              
            </div>
           
            <div class="row ">
                <div class="col">
                    <label for="" class="form-label my-3">ProductCategory</label>
                    <input type="type" name="ProductCategory" class="form-control" value="@ViewBag.sua.ProductCategory" />
                </div>
                <div class="col">
                    <label for="" class="form-label my-3">Description</label>
                    <input type="type" name="Description" class="form-control" value="@ViewBag.sua.Description" />
                </div>
                
            </div>
            <div class="d-flex justify-content-end text-lg-end">
                @Html.ActionLink("Hủy", "manager", "Product", new { @class = "btn btn-outline-success mt-3", @style = "border-radius: 1.5rem;  width: 100px;" })
                <button class="btn btn-success mt-3" name="ProductID" style="border-radius: 1.5rem; width: 100px; margin-left: 15px;" type="submit" value="@ViewBag.sua.ProductId">Sửa</button>
            </div>
        </div>
    </div>
}

