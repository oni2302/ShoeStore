@model ShoeStore.Models.UserReg_Result

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5 w-75 mx-auto">
                    <div class="card-body p-4 p-sm-5 ">
                        <div style="font-size: 20px" class="card-title text-center mb-5">Đăng nhập</div>
                        @Html.ValidationSummary(true, "", new { htmlAttributes = new { @class = "text-danger" } })
                        <div class="text-center">
                            @Html.ValidationMessage("LoginFailed", new { @style = "font-size: 12px; color:red;" })
                        </div>
                        <div class="form-group my-3 w-75 mx-auto">
                            @Html.LabelFor(model => model.username, "Tài khoản", htmlAttributes: new { @class = "form-label", @style = "font-size: 12px;" })
                            <div style="max-width: none;">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control mw-100" } })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-3 w-75 mx-auto">
                            @Html.LabelFor(model => model.pass, "Mật khẩu", htmlAttributes: new { @class = "form-label", @style = "font-size: 12px;" })
                            <div style="max-width: none;">
                                @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control mw-100" } })
                                @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <div class="text-center" style="border-radius: 20px;">
                                <input type="submit" value="Đăng nhập" class="btn btn-dark px-4 py-2" style="font-size: 12px;" />
                            </div>
                        </div>
                        <hr class="my-3" />
                        <div class="text-center">
                            <span>Chưa có tài khoản?<a href="@Url.RouteUrl("Dangky")" style="font-size: 12px" class="my-3">Đăng ký </a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}







